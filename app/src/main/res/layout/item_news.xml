<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <ImageView
            android:id="@+id/news_item_image"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@tools:sample/avatars"
            android:src="@drawable/ic_notifications_black_24dp"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            android:paddingStart="5sp"
            android:paddingEnd="5sp"
            android:scaleType="center"
            android:visibility="gone"
            android:contentDescription="@string/title_news" />

        <TextView
            android:id="@+id/news_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/news_item_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:textAlignment="center"
            android:fontFamily="@font/calibril"
            android:textStyle="bold"
            android:maxLines="1"
            tools:text="texte"
            android:textSize="32sp"
            />

        <TextView
            android:id="@+id/news_item_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/news_item_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20sp"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:layout_marginBottom="30sp"
            android:textAlignment="center"
            android:fontFamily="@font/calibril"
            android:textStyle="normal"
            android:maxLines="3"
            tools:text="texte"
            android:textSize="17sp"/>

</android.support.constraint.ConstraintLayout>