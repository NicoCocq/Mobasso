<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <Button
        android:id="@+id/home_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/quit_editing_mode"
        android:background="@color/colorPrimary"
        android:visibility="gone"
        />

    <View
        android:id="@+id/home_banner_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/home_save"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHeight_percent="0.25"
        android:background="@color/mainColor"
        />

    <ImageView
        android:id="@+id/home_association_logo"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:src="@drawable/ic_home_black_24dp"
        app:layout_constraintTop_toTopOf="@+id/home_banner_view"
        app:layout_constraintRight_toRightOf="@+id/home_banner_view"
        app:layout_constraintLeft_toLeftOf="@id/home_banner_view"
        app:layout_constraintBottom_toBottomOf="@id/home_banner_view"
        />

    <ScrollView
        android:layout_width="0sp"
        android:layout_height="0sp"
        app:layout_constraintTop_toBottomOf="@id/home_banner_view"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/home_association_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:textAlignment="center"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="@font/calibril"
                android:text="@string/association_name"
                tools:text="MobAsso"
                />
            <EditText
                android:id="@+id/home_association_title_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:textAlignment="center"
                android:textSize="32sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:fontFamily="@font/calibril"
                android:text="@string/association_name"
                />

            <TextView
                android:id="@+id/home_association_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:minLines="1"
                android:textSize="17sp"
                android:paddingStart="30sp"
                android:paddingEnd="30sp"
                android:paddingBottom="30sp"
                android:fontFamily="@font/calibril"
                tools:text="@string/association_detail"
                android:text="@string/association_detail"/>

            <EditText
                android:id="@+id/home_association_details_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:minLines="1"
                android:textSize="17sp"
                android:paddingStart="30sp"
                android:paddingEnd="30sp"
                android:paddingBottom="30sp"
                android:fontFamily="@font/calibril"
                tools:text="@string/association_detail"
                android:visibility="gone"
                android:text="@string/association_detail"
                />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>