<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.esgi.davidlinhares.mobasso.News.NewsDetailsActivity">

    <ImageView
        android:id="@+id/news_detail_item_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@tools:sample/avatars"
        app:layout_constraintHeight_percent="0.3"
        android:paddingTop="5sp"
        android:paddingBottom="5sp"
        android:paddingStart="5sp"
        android:paddingEnd="5sp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/title_news" />

    <TextView
        android:id="@+id/news_detail_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/news_detail_item_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:textAlignment="center"
        android:fontFamily="@font/calibril"
        android:textStyle="bold"
        tools:text="texte"
        android:textSize="32sp"
        />

    <TextView
        android:id="@+id/news_detail_item_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/news_detail_item_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20sp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:paddingBottom="30sp"
        android:textAlignment="center"
        android:fontFamily="@font/calibril"
        android:textStyle="normal"
        tools:text="texte"
        android:textSize="17sp"/>


</android.support.constraint.ConstraintLayout>
