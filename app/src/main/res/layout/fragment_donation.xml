<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <TextView
        android:id="@+id/actuality_banner_view"
        android:layout_width="0dp"
        android:layout_height="0sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="35sp"
        android:gravity="center_vertical"
        android:paddingStart="15sp"
        android:paddingEnd="15sp"
        app:layout_constraintHeight_percent="0.15"
        android:background="@color/darkWhite"
        android:text="@string/title_support"
        android:fontFamily="@font/calibril"
        android:textColor="#000000"
        />

    <ImageView
        android:id="@+id/donation_image"
        android:layout_width="85sp"
        android:layout_height="85sp"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_donation_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actuality_banner_view"
        android:layout_marginTop="80sp"
         />

    <Button
        android:id="@+id/button_donation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/title_donation"
        android:textColor="@color/white"
        android:layout_marginTop="25sp"
        app:layout_constraintTop_toBottomOf="@id/donation_image"
        android:background="@color/mainColor"
        />

    <ImageView
        android:id="@+id/facebook_image"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_facebook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_donation"
        app:layout_constraintEnd_toStartOf="@id/twitter_image"
        android:layout_marginTop="70sp"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/twitter_image"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_twitter"
        app:layout_constraintStart_toEndOf="@id/facebook_image"
        app:layout_constraintEnd_toStartOf="@id/youtube_image"
        app:layout_constraintTop_toBottomOf="@id/button_donation"
        android:layout_marginTop="70sp"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/youtube_image"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_youtube"
        app:layout_constraintStart_toEndOf="@id/twitter_image"
        app:layout_constraintEnd_toStartOf="@id/instagram_image"
        app:layout_constraintTop_toBottomOf="@id/button_donation"
        android:layout_marginTop="70sp"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/instagram_image"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_instagram"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/youtube_image"
        app:layout_constraintTop_toBottomOf="@id/button_donation"
        android:layout_marginTop="70sp"
        android:visibility="gone"
        />


</android.support.constraint.ConstraintLayout>